<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Voxerra.Pages.Settings.PasswordSecurityPage"
             xmlns:viewModel="clr-namespace:Voxerra.ViewModels"
             Title="Profile Settings"
             Background="#111011" >

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <Label Text="Password and security" TextColor="White" FontSize="16" FontAttributes="Bold"/>
            <Border
                StrokeThickness="2.5"
                StrokeShape="RoundRectangle 20">
                <Border.Stroke>
                    <LinearGradientBrush>
                        <GradientStop Color="#b414de" Offset="0.0" />
                        <GradientStop Color="#d127a5" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Stroke>
                <Frame BackgroundColor="#1E1E1E" CornerRadius="10" Padding="15">

                    <VerticalStackLayout Spacing="10">


                        <HorizontalStackLayout VerticalOptions="Center">
                            <Label Text="Change password" TextColor="White" FontSize="14"/>
                            <ImageButton Source="chevron_right.png" BackgroundColor="Transparent" HorizontalOptions="EndAndExpand"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout VerticalOptions="Center">
                            <Label Text="Two-factor Auth" TextColor="White" FontSize="14"/>
                            <ImageButton Source="chevron_right.png" BackgroundColor="Transparent" HorizontalOptions="EndAndExpand"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout VerticalOptions="Center">
                            <Label Text="Saved login" TextColor="White" FontSize="14"/>
                            <ImageButton Source="chevron_right.png" BackgroundColor="Transparent" HorizontalOptions="EndAndExpand"/>
                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                </Frame>
            </Border>
                
            
            <Label Text="Security checks" TextColor="White" FontSize="16" FontAttributes="Bold"/>
            <Label Text="Review serurity issued by running checks across app, device and emails sent." TextColor="White" FontSize="12" FontAttributes="Bold"/>
            <Border
                StrokeThickness="2.5"
                StrokeShape="RoundRectangle 20">
                <Border.Stroke>
                    <LinearGradientBrush>
                        <GradientStop Color="#b414de" Offset="0.0" />
                        <GradientStop Color="#d127a5" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Stroke>
                <Frame BackgroundColor="#1E1E1E" CornerRadius="10" Padding="15">
                    <VerticalStackLayout Spacing="10">

                        <HorizontalStackLayout VerticalOptions="Center">
                            <Label Text="Where you're logged in" TextColor="Red" FontSize="14"/>
                            <ImageButton Source="chevron_right.png" BackgroundColor="Transparent" HorizontalOptions="EndAndExpand"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout VerticalOptions="Center">
                            <Label Text="Login alerts" TextColor="Red" FontSize="14"/>
                            <ImageButton Source="chevron_right.png" BackgroundColor="Transparent" HorizontalOptions="EndAndExpand"/>
                        </HorizontalStackLayout>
                        
                        <HorizontalStackLayout VerticalOptions="Center">
                            <Label Text="Security checkup" TextColor="Red" FontSize="14"/>
                            <ImageButton Source="chevron_right.png" BackgroundColor="Transparent" HorizontalOptions="EndAndExpand"/>
                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                </Frame>
            </Border>

            
            <Label Text="Login settings" TextColor="White" FontSize="16" FontAttributes="Bold"/>
            <Border
                StrokeThickness="2.5"
                StrokeShape="RoundRectangle 20">
                <Border.Stroke>
                    <LinearGradientBrush>
                        <GradientStop Color="#b414de" Offset="0.0" />
                        <GradientStop Color="#d127a5" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Stroke>
                <Frame BackgroundColor="#1E1E1E" CornerRadius="10" Padding="15">
                    <VerticalStackLayout Spacing="10">


                        <HorizontalStackLayout VerticalOptions="Center">
                            <Label Text="Log out" TextColor="Red" FontSize="14"/>
                            <ImageButton Source="chevron_right.png" BackgroundColor="Transparent" HorizontalOptions="EndAndExpand"/>
                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                </Frame>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
