<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Voxerra.Pages.GroupPage"
             xmlns:viewModels="clr-namespace:Voxerra.ViewModels"
             Title="GroupPage"
             Background="#0f0f0f">
    <ContentPage.Content>
        <RefreshView Margin="10" IsRefreshing="{Binding IsRefreshing}" Command="{Binding LoadOlderMessagesCommand}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition/>
                    <RowDefinition Height="55" />
                </Grid.RowDefinitions>

                <!-- Group Header -->
                <Grid>
                    <StackLayout Orientation="Horizontal">
                        <Button Text="&#xe5c4;" FontFamily="GoogleFont" FontSize="24" 
                                VerticalOptions="Center" BackgroundColor="Transparent"
                                TextColor="White" CornerRadius="45" Padding="0" Margin="10,0,0,0"
                                Command="{Binding BackToHome}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Margin="70,0,0,0">
                        <Frame VerticalOptions="Center" HeightRequest="30" WidthRequest="30" 
                               CornerRadius="50" IsClippedToBounds="True" BorderColor="Black" Padding="0">
                            <Image Source="{Binding GroupInfo.AvatarSourceName}" Aspect="AspectFill"/>
                        </Frame>

                        <Label Text="{Binding GroupInfo.Name}" TextColor="White" 
                               FontFamily="OpenSansSemibold" FontSize="18" 
                               Margin="10,0,0,0" VerticalOptions="Center"/>

                        <Button Text="people" FontFamily="GoogleFont" FontSize="24" Padding="0"
                                BackgroundColor="Transparent" TextColor="White"
                                Command="{Binding ShowMembersCommand}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" HorizontalOptions="End">
                        <Button Text="dehaze" FontFamily="GoogleFont" FontSize="24" Padding="0" 
                                Margin="0,0,10,0" BackgroundColor="Transparent" TextColor="White"
                                Command="{Binding ShowGroupOptionsCommand}"/>
                    </StackLayout>
                </Grid>

                <!-- Messages List -->
                <CollectionView x:Name="MessagesCollectionView" Grid.Row="1" 
                               ItemsSource="{Binding Messages}"
                               Margin="0,10,0,10" VerticalScrollBarVisibility="Never"
                               ItemsUpdatingScrollMode="{Binding ScrollUpdating}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="10" Orientation="Vertical" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout>
                                <VerticalStackLayout.HorizontalOptions>
                                    <MultiBinding Converter="{StaticResource FromUserIdToHorizontalOptionConverter}">
                                        <Binding Path="FromUserId" />
                                        <Binding Path="CurrentUserId" Source="{RelativeSource AncestorType={x:Type viewModels:GroupViewModel}}" />
                                    </MultiBinding>
                                </VerticalStackLayout.HorizontalOptions>

                                <!-- Sender Info -->
                                <StackLayout Orientation="Horizontal" IsVisible="{Binding IsGroupMessage}">
                                    <Frame VerticalOptions="Center" HeightRequest="20" WidthRequest="20" 
                                           CornerRadius="40" IsClippedToBounds="True" Padding="0">
                                        <Image Source="{Binding SenderAvatar}" Aspect="AspectFill"/>
                                    </Frame>
                                    <Label Text="{Binding SenderName}" FontSize="10" TextColor="White"
                                           Margin="5,0,0,0" VerticalOptions="Center"/>
                                </StackLayout>

                                <!-- Message Content -->
                                <Frame Padding="10,6,10,6" CornerRadius="10" 
                                       HorizontalOptions="{Binding HorizontalOptions, Source={RelativeSource AncestorType={x:Type VerticalStackLayout}}}">
                                    <Frame.BackgroundColor>
                                        <MultiBinding Converter="{StaticResource FromUserIdToBackgroundColorConverter}">
                                            <Binding Path="FromUserId" />
                                            <Binding Path="CurrentUserId" Source="{RelativeSource AncestorType={x:Type viewModels:GroupViewModel}}" />
                                        </MultiBinding>
                                    </Frame.BackgroundColor>
                                    <Label Text="{Binding Content}" FontSize="12" TextColor="Black"
                                           LineBreakMode="WordWrap"/>
                                </Frame>

                                <!-- Timestamp -->
                                <Label Text="{Binding SendDateTime, StringFormat='{0:HH:mm}'}"
                                       FontSize="9" TextColor="Gray"
                                       HorizontalOptions="{Binding HorizontalOptions, Source={RelativeSource AncestorType={x:Type VerticalStackLayout}}}"
                                       Margin="5,0,5,0"/>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Message Input -->
                <Grid Grid.Row="2">
                    <Border Margin="10,0,10,0" StrokeThickness="2" StrokeShape="RoundRectangle 20"
                            BackgroundColor="#1D1D1D" HeightRequest="45">
                        <Border.Stroke>
                            <LinearGradientBrush>
                                <GradientStop Color="#b414de" Offset="0.0" />
                                <GradientStop Color="#d127a5" Offset="1.0" />
                            </LinearGradientBrush>
                        </Border.Stroke>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="45"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Text="add" FontFamily="GoogleFont" FontSize="22"
                                    Margin="5,0,0,0" Padding="0" VerticalOptions="Center"
                                    TextColor="White" HeightRequest="32" WidthRequest="35"
                                    BackgroundColor="gray" CornerRadius="40"
                                    Command="{Binding AddMemberCommand}"/>

                            <Entry Grid.Column="1" TextColor="White" Placeholder="Message..." 
                                   Text="{Binding Message}"/>

                            <Button Grid.Column="2" Text="send" FontFamily="GoogleFont" FontSize="22"
                                    Padding="0" Margin="0,0,10,0" VerticalOptions="Center" 
                                    HorizontalOptions="End" TextColor="White"
                                    HeightRequest="30" WidthRequest="45" BackgroundColor="gray"
                                    CornerRadius="40" Command="{Binding SendMessageCommand}"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </RefreshView>
    </ContentPage.Content>
</ContentPage>