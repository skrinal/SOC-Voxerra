<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Voxerra.Pages.LoginPage"
             xmlns:viewModel="clr-namespace:Voxerra.ViewModels"
             Title="LoginPage"
             Background="{StaticResource Background}">
    
    <ContentPage.BindingContext>
        <viewModel:LoginPageViewModel/>
    </ContentPage.BindingContext>
    
    <Grid>
        <VerticalStackLayout Margin="30" VerticalOptions="Center">
            <Image 
                HeightRequest="150"
                Source="logo_voxerra_whitev2.png"
                WidthRequest="300" />

            <Label
                TextColor="{StaticResource PrimaryText}"
                Text="Username"
                Margin="5,0,0,0"
                Padding="0,10,0,5" />
            <Border 
                x:Name="UserNameBorder"
                Stroke="{StaticResource SecondaryColor}"  
                StrokeThickness="2.5"
                StrokeShape="RoundRectangle 20">
                <Entry
                    x:Name="UserNameEntry"
                    Margin="8,0,8,0" 
                    ReturnType="Go"
                    TextColor="{StaticResource PrimaryText}"
                    Text="{Binding UserName}"/>
            </Border>

            <Label
                TextColor="{StaticResource PrimaryText}"
                Text="Password"
                Margin="5,0,0,0"
                Padding="0,10,0,5"/>
            <Border 
                 Stroke="{StaticResource SecondaryColor}"  
                 StrokeThickness="2.5"
                 StrokeShape="RoundRectangle 20">
                <Entry
                     Margin="8,-1,8,-1" 
                     IsPassword="True"
                     ReturnType="Go"
                     TextColor="{StaticResource PrimaryText}"
                     Text="{Binding Password}"/>
            </Border>

            <Label
                Margin="0,10,0,0"
                Text="Forgot password"
                TextColor="{StaticResource PrimaryText}"/>

            <Button
                Margin="0,30,0,0"
                Background="{StaticResource TertiaryColor}"
                Text="Log in"
                TextColor="{StaticResource PrimaryText}"
                Command="{Binding LoginCommand}"/>

            <HorizontalStackLayout Margin="0,25,0,0" HorizontalOptions="Center">
                <Label Text="Dont have an account?"
                       TextColor="{StaticResource SmallerText}"/>
                <Label
                     Margin="5,0,0,0"
                     Text="Sign up"
                     TextColor="{StaticResource PrimaryText}"/>

            </HorizontalStackLayout>
        </VerticalStackLayout>

       
    </Grid>
</ContentPage>